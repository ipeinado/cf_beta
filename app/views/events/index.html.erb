<% provide(:title, I18n.t(:event, count: 2)) %>

<div class="container">

<h1><%= I18n.t(:event, count: 2) %> <%= @city if @city.present? %></h1>

  <% if @events.any? %>
    <ul class="events-list">
      <% @events.each do |event| %>
        <li class="event"><%= render event %></li>
      <% end %>
    </ul>
  <% else %>
    <p><%= I18n.t(:no_future_events) %> <%= I18n.t(:in_this_city) if @city.present? %></p>
  <% end %>

</div>
