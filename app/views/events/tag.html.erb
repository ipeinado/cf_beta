<% provide(:title, I18n.t(:events_tagged_with, tag: @tag)) %>

<div class="container">

  <ol class="breadcrumb">
    <li><%= link_to I18n.t(:event, count: 2), events_path %></li>
    <li><%= @tag %></li>
  </ol>

  <h1><%= I18n.t(:events_tagged_with, tag: @tag) %></h1>

  <% if @events.any? %>
    <ul class="events-list">
      <% @events.each do |event| %>
        <li class="event"><%= render event %></li>
      <% end %>
    </ul>
  <% else %>
    <p><%= I18n.t(:no_future_events) %></p>
  <% end %>

</div>
