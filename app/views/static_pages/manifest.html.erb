<% provide(:title, "Manifiesto") %>

<h1><%= t :manifest_title %></h1>

<div style="text-align: center;">
  <h2>Add yourself to our wall</h2>
  <p>Just sign in using your Twitter account and we'll add your profile picture to our wall</p>
  <%= link_to image_tag("social/twitter.png"), "/auth/twitter", title: "Sign in using Twitter" %>
  <%= link_to image_tag("social/facebook.png"), "/auth/facebook", title: "Sign in using Facebook" %>
</div>
<% if @user_supporters.any? %>
  <ul class="supporters">
    <% @user_supporters.each do |user_supporter| %>
        <li><%= link_to image_tag(user_supporter.avatar_url), user_supporter, title: user_supporter.name %></li>
    <% end %>
  </ul>
<% end %>

<% if @entity_supporters.any? %>
  <ul class="supporters">
    <% @entity_supporters.each do |entity_supporter| %>
        <li><%= link_to image_tag(entity_supporter.entity_logo_url), entity_supporter, title: entity_supporter.name %></li>
    <% end %>
  </ul>
<% end %>
