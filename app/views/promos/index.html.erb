<% provide(:title, t(:promos)) %>

<div class="row">
  <div class="col-md-12">
    <h1><%= t(:promos) %> <%= "@ #{@region}" if @region.present?  %></h1>

    <ul id="promos">
      <% @promos.each do |promo| %>
        <li class="promo"><%= render promo %></li>
      <% end %>
    </ul>
  </div>
</div>
