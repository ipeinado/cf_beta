<div class="logo"><%= image_tag(promo.promo_logo.url) if promo.promo_logo?%></div>
<div class="product-info">
  <h2><%= link_to promo.name, promo %></h2>
  <% if promo.categories.any? %>
    <ul class="promo_categories">
      <% promo.categories.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    </ul>
  <% end %>
  <ul>
  </ul>
  <p class="product-description text-muted"><%= promo.brief_product_description %></p>
  <p><%= link_to promo.region, promos_path(region: promo.region) if promo.region.present? %></p>
</div>
<div class="promo-info">
  <p class="promo-description"><%= promo.brief_promo_description %></p>
  <p class="get-promo-btn"><%= link_to "Llévate esta promoción", promo.link, class: 'btn btn-warning' %></p>
</div>
