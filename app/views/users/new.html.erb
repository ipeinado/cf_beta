<% provide(:title, "Añadir usuario") %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Añadir usuario</h1>

        <%= form_for @user, html: { multipart: true } do |f| %>

            <%= render 'shared/error_messages' %>

            <div class="form-group">
                <%= image_tag @user.avatar_url.to_s, alt: "#{@user.name} avatar" %>
                <%= f.label :avatar, "Añade una imagen a la cuenta" %>
                <%= f.file_field :avatar %>
                <%= f.hidden_field :avatar_cache %>
            </div>

            <div class="form-group">
                <%= f.label :name, "Nombre de usuario" %>
                <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :email, "Correo eléctronico" %>
                <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :password, "Contraseña (mínimo 6 caracteres)" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "Confirmar contraseña" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit "Registrarse", class: "btn btn-default" %>
            </div>
        <% end %>
    </div>
</div>
