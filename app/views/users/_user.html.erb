<tr>
    <td><%= image_tag user.avatar_url(:small_thumb).to_s %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
        <%= link_to "Ver perfil", user, class: 'btn btn-sm btn-default', alt: "avatar de #{user.name}" %>
    </td>
    <td>
        <% if current_user.admin? && !current_user?(user) && !user.admin? %>
            <%= link_to "eliminar", user, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "¿Estás seguro? Una vez eliminado no habrá vuelta atrás" } %>
        <% end %>
    </td>
</tr>
