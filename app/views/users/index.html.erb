<% provide(:title, I18n.t(:users_title)) %>

<%= render 'shared/admin_menu' %>

<div class="row">
	<div class="col-md-9 col-md-offset-1">

		<h1>
			<%= t :users_title %>
			<%= link_to I18n.t(:new_user), new_user_path, class: 'btn btn-default' %>
		</h1>
		<%= will_paginate %>
		<table class="table">
			<tr>
				<th><%= t User.human_attribute_name("name") %></th>
				<th><%= t User.human_attribute_name("email") %></th>
				<th></th>
				<th></th>
			</tr>
			<% if @users.any? %>
				<% @users.each do |user| %>
					<%= render user %>
				<% end %>
			<% else %>
				<tr><td colspan=2><%= t(:no_users) %></td></tr>
			<% end %>
		</table>
		<%= will_paginate %>
	</div>
</div>
