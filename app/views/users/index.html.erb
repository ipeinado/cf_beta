<% provide(:title, "Usuarios") %>

<div class="row">
	<div class="col-md-9 col-md-offset-1">
		<h1>Usuarios</h1>
		<table class="table">
			<tr>
				<th>Nombre</th>
				<th>email</th>
			</tr>
			<% if @users.any? %>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.name %></td>
						<td><%= user.email %></td>
					</tr>
				<% end %>
			<% else %>
				<tr><td colspan=2>No hay usuarios en este momento</td></tr>
			<% end %>
		</table>
	</div>
</div>