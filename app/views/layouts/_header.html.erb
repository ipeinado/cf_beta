<header role="banner">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <%= link_to image_tag("LogoCf_header.png"), root_path, class: "navbar-brand" %>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to t(:manifest), manifiesto_path %></li>
                    <li><%= link_to t(:discover), descubre_path, data: { no_turbolink: true } %></li>
                    <li><%= link_to t(:promos), promos_path %></li>
                    <li><%= link_to t(:blog), '#' %></li>
                    <li><%= link_to t(:cf_projects), projects_path %></li>
                    <% if logged_in? %>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <%= t :header_welcome, name: current_user.name %> <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><%= link_to t(:my_profile), current_user %></li>
                                <li><%= link_to t(:admin), users_path %></li>
                                <li class="divider"></li>
                                <li><%= link_to t(:log_out), logout_path, method: :delete %></li>
                            </ul>
                        </li>
                    <% else %>
                        <li><%= link_to t(:login), login_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
</header>
