<% provide(:title, @project.title) %>

<ol class="breadcrumb">
	<li><%= link_to I18n.t(:all_projects), projects_path %></li>
	<li><%= @project.title %></li>
</ol>

<div class="row">
	<div class="col-md-10 col-md-offset-1 project-show">
		<% if @project.featured_picture? %>
			<div class="project-featured-picture">
				<%= link_to image_tag(@project.featured_picture, alt: I18n.t(:featured_picture_alt, project: @project.title)), @project.featured_picture_url %>
			</div>
		<% end %>
		<div class="project-content">
			<div class="project-show-image">
				<%= image_tag @project.logo %>
			</div>
			<div class="project-show-content">
				<h1>
					<%= @project.title %>
					<% if current_user && current_user.admin? %>
						<%= link_to t(:edit_project_title), edit_project_path(@project), class: "btn btn-default" %>
					<% end %>
				</h1>
				<div class="project-show-description">
					<p><%= @project.city %>, <%= @project.country %></p>
					<p><%= @project.description %></p>
				</div>
				<ul class="social-links">
					<li><%= link_to image_tag('social/website.png'), @project.website, target: "_blank", title: t(:visit_web, project: @project.title) if @project.website?%></li>
					<li><%= link_to image_tag('social/twitter.png'), 'https://twitter.com/' + @project.twitter, target: "_blank", title: t(:visit_twitter, project: @project.title) if @project.twitter?%></li>
					<li><%= link_to image_tag('social/facebook.png'), @project.facebook, target: "_blank", title: t(:visit_facebook, project: @project.title) if @project.facebook? %></li>
				</ul>
			</div>
		</div>
	</div>
</div>
