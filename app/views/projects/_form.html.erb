<%= form_for @project, html: { multipart: true } do |f| %>
	<div class="col-md-3 col-md-offset-1">
		<%= f.label :logo %>
		<%= image_tag @project.logo.url, class: "project-logo", alt: @project.title? ? "logo #{@project.title}" : "default logo" %>
		<%= f.file_field :logo, class: "form-control" %>
		<%= f.hidden_field :logo_cache %>

		<p>
    	<label>
      	<%= f.check_box :remove_logo %>
      	<%= t(:remove_logo) %>
    	</label>
  	</p>
	</div>
	<div class="col-md-6">

		<% if @project.errors.any? %>
			<div class="error_explanation">
	   		<div class="alert alert-danger">
	     		<%= t :messages, scope: "activerecord.errors", count: @project.errors.count %>
	       		<ul>
	           	<% @project.errors.full_messages.each do |msg| %>
	                <li><%= msg %></li>
	  		   		<% end %>
	       		</ul>
	      </div>
	    </div>
		<% end %>

		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :address %>
			<%= f.text_field :address, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :city %>
			<%= f.text_field :city, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :province %>
			<%= f.text_field :province, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :country %>
			<%= f.text_field :country, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :website %>
			<%= f.url_field :website, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :twitter %>
			<%= f.text_field :twitter, placeholder: "Ej: @username", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :facebook %>
			<%= f.text_field :facebook, placeholder: "Ej: https://www.facebook.com/projectname", class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :featured_picture %>
			<%= image_tag @project.featured_picture.url, class: "project-featured-picture" %>
			<%= f.file_field :featured_picture, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit class: "btn btn-default" %>
		</div>
	</div>
<% end %>
